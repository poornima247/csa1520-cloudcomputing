      display: none;
    }

    #costDisplay {
      font-weight: bold;
      margin: 10px 0;
      color: green;
    }
  </style>
</head>
<body>

<div class="container">
  <!-- Login Form -->
  <div id="loginForm">
    <h2>Hotel Login</h2>
    <input type="text" id="username" placeholder="Username" required>
    <input type="password" id="password" placeholder="Password" required>
    <button onclick="login()">Login</button>
  </div>

  <!-- Booking Form -->
  <div id="bookingForm" class="hidden">
    <h2>Room Booking</h2>
    <select id="roomType" onchange="updateCost()">
      <option value="">Select Room Type</option>
      <option value="Single">Single - ‚Çπ1000/night</option>
      <option value="Double">Double - ‚Çπ1800/night</option>
      <option value="Suite">Suite - ‚Çπ3000/night</option>
    </select>
    <div id="costDisplay"></div>
    <label>Check-In Date</label>
    <input type="date" id="checkin" required>
    <label>Check-Out Date</label>
    <input type="date" id="checkout" required>
    <button onclick="submitBooking()">Book Room</button>
  </div>
</div>

<script>
  function login() {
    const username = document.getElementById('username').value.trim();
    const password = document.getElementById('password').value.trim();

    if (username && password) {
      document.getElementById('loginForm').classList.add('hidden');
      document.getElementById('bookingForm').classList.remove('hidden');
    } else {
      alert("Please enter username and password.");
    }
  }

  function updateCost() {
    const room = document.getElementById('roomType').value;
    const costDisplay = document.getElementById('costDisplay');
    let cost = "";

    if (room === "Single") cost = "‚Çπ1000 per night";
    else if (room === "Double") cost = "‚Çπ1800 per night";
    else if (room === "Suite") cost = "‚Çπ3000 per night";

    costDisplay.textContent = cost ? `Cost: ${cost}` : "";
  }

  function submitBooking() {
    const room = document.getElementById('roomType').value;
    const checkin = document.getElementById('checkin').value;
    const checkout = document.getElementById('checkout').value;

    if (!room || !checkin || !checkout) {
      alert("Please fill in all fields.");
      return;
    }

    if (new Date(checkin) >= new Date(checkout)) {
      alert("Check-out date must be after check-in date.");
      return;
    }

    alert(`‚úÖ Booking Confirmed!\n\nüè® Room: ${room}\nüìÖ Check-In: ${checkin}\nüìÜ Check-Out: ${checkout}`);
  }
</script>

</body>
</html>
 
